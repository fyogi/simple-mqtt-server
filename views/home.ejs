<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./head.ejs'); %>
</head>

<body>
    <% include('./header.ejs'); %>
        </header>
        <header>
            <div id="login">
                <div class="container">
                    <div id="login-row" class="row justify-content-center align-items-center">
                        <div id="login-column" class="col-md-6">
                            <div id="login-box" class="col-md-12">
                                <form id="login-form" class="form" action="" method="post">
                                    <h3 class="text-center text-info">Add Message </h3>
                                    <div class="form-group">
                                        <label for="message" class="text-info">:Type mesage in here</label><br>
                                        <input type="text" name="message" id="message" class="form-control">
                                    </div>
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="send">
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <footer>
                <p class="text-center text-muted">&copy; Copyright 2021</p>
            </footer>

            <!--- Javascript Code-->
            <script src="/socket.io/socket.io.js"></script>
            <script>
                var socket = io();
                socket.on('data', (data) => {
                    console.log(data);
                });
                var data = document.getElementById('message');
                var form = document.getElementById('login-form');
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    if (data.value) {
                        socket.emit('message', data.value);
                        data.value = '';
                    }
                });
            </script>
</body>

</html>